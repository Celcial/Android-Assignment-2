<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david_2.petshop.PetDetails"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    >

    <FrameLayout
        android:id="@+id/frml_frame"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:layout_marginBottom="257dp"
        android:background="@color/redTheme"
        android:padding="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/iv_dog_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/aweful_dog" />

        <ImageView
            android:id="@+id/iv_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/frame" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="107dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/pet_image"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/frml_frame"
        app:srcCompat="@drawable/button2"
        tools:ignore="RtlHardcoded"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="107dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/clear_list"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/frml_frame"
        app:srcCompat="@drawable/button3"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="380dp"
        android:layout_height="307dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
