<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david_2.petshop.PetDetails"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"

    >

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="394dp"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/logo"
        android:padding="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_concept" />

    <TextView
        android:id="@+id/tv_name_header"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/charcoal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frml_frame" />

    <ImageButton
        android:id="@+id/ib_info"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="onClick_toPetInfo"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_header"
        app:srcCompat="@drawable/pet_info" />

    <ImageButton
        android:id="@+id/ib_schedule"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="onClick_toPetSchedule"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_header"
        app:srcCompat="@drawable/pet_schedule" />

    <ImageButton
        android:id="@+id/ib_find"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="32dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="onClick_toPetFind"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/find_pet" />

    <ImageButton
        android:id="@+id/ib_call"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="32dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="onClick_toPetCall"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/call_pet" />

    <FrameLayout
        android:id="@+id/frml_frame"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
        android:background="@color/redTheme">

        <ImageView
            android:id="@+id/iv_dog_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/aweful_dog" />

        <ImageView
            android:id="@+id/iv_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/pet_image"
            app:srcCompat="@drawable/frame" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="76dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/red_dot_darker"
        app:layout_constraintBottom_toBottomOf="@+id/frml_frame"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintLeft_toLeftOf="@+id/frml_frame"
        app:layout_constraintRight_toRightOf="@+id/frml_frame"
        app:layout_constraintTop_toTopOf="@+id/frml_frame"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteY="144dp"
        tools:layout_editor_absoluteX="270dp" />

</android.support.constraint.ConstraintLayout>
